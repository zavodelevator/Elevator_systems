<h1>Firms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Edrpou</th>
      <th>Email</th>
      <th>Ipn</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @firms.each do |firm| %>
      <tr>
        <td><%= firm.name %></td>
        <td><%= firm.edrpou %></td>
        <td><%= firm.email %></td>
        <td><%= firm.ipn %></td>
        <td><%= firm.data %></td>
        <td><%= link_to 'Show', firm %></td>
        <td><%= link_to 'Edit', edit_firm_path(firm) %></td>
        <td><%= link_to 'Destroy', firm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

